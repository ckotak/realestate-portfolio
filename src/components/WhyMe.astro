---
import { getCollection } from 'astro:content';

const reasons = (await getCollection('whyme')).sort((a, b) => a.data.order - b.data.order);
---

<section id="why-me" class="bg-white py-24 px-6">
  <div class="max-w-6xl mx-auto">

    <div class="text-center mb-16">
      <p class="text-gold text-sm font-semibold uppercase tracking-[0.2em] mb-4 reveal">
        Why Work With Me
      </p>
      <h2 class="font-display text-[clamp(3rem,6vw,5rem)] leading-none text-charcoal uppercase reveal">
        The Difference Is In<br/>The Details
      </h2>
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-8">
      {reasons.map((reason, i) => (
        <div
          class="reveal border border-lightgray p-8 hover:border-gold transition-colors group"
          style={`transition-delay: ${i * 100}ms`}
        >
          <div class="text-gold text-2xl mb-4 group-hover:scale-110 transition-transform">
            {reason.data.icon}
          </div>
          <h3 class="font-display text-2xl text-charcoal uppercase mb-3">
            {reason.data.title}
          </h3>
          <p class="text-charcoal/60 text-sm leading-relaxed">
            {reason.data.body}
          </p>
        </div>
      ))}
    </div>

  </div>
</section>
